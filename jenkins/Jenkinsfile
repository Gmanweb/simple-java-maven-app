pipeline {
    agent {
        label 'scripts'
    }
    stages {
        stage('Docker Deploy QA') {
            agent any
            steps {
                sh 'docker --version'
            }
        }
        stage('Maven Test') {
            agent {
                docker {
                    image 'maven:3.3.3'
                    args "${params.MAVEN_ARGS}"
                }
            }
            steps {
                sh 'mvn test'
            }
        }
    }
}
